@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-primary bg-gradient text-white py-5 mb-5 rounded-4 shadow" style="background: linear-gradient(90deg, #375aee 0%, #5c7cfa 100%);">
    <div class="container text-center py-4">
        <h1 class="display-3 fw-bold mb-3" style="letter-spacing:1px;">HCM Platform</h1>
        <p class="lead mb-4 fs-4">
            Next-level Human Capital Management.<br>
            For ambitious teams and modern companies.
        </p>
        <div class="mt-4">
            <blockquote class="blockquote text-center text-white-50">
                <p class="mb-0 fs-4 fst-italic">“Great teams aren’t born. They’re built – one person at a time.”</p>
                <footer class="blockquote-footer text-white-50 mt-2">HCM Team</footer>
            </blockquote>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center text-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="row g-4">
                <div class="col-12 col-md-4">
                    <div class="border rounded-3 py-4 px-2 h-100 shadow-sm bg-white">
                        <div class="mb-2 fs-2 text-primary"><i class="bi bi-people"></i></div>
                        <h5 class="fw-bold mb-2">People & Teams</h5>
                        <p class="text-muted small mb-0">
                            Track your workforce, manage assignments, and keep all records at your fingertips.
                        </p>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="border rounded-3 py-4 px-2 h-100 shadow-sm bg-white">
                        <div class="mb-2 fs-2 text-primary"><i class="bi bi-building"></i></div>
                        <h5 class="fw-bold mb-2">Departments</h5>
                        <p class="text-muted small mb-0">
                            Structure your organization, assign managers and improve department collaboration.
                        </p>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="border rounded-3 py-4 px-2 h-100 shadow-sm bg-white">
                        <div class="mb-2 fs-2 text-primary"><i class="bi bi-award"></i></div>
                        <h5 class="fw-bold mb-2">Roles & Permissions</h5>
                        <p class="text-muted small mb-0">
                            Fine-tune access control and empower employees with the right tools.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
