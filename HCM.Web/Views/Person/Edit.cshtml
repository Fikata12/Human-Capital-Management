@model PersonFormModel

@{
    ViewData["Title"] = "Edit Person";
}

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow border-0 rounded-4">
            <div class="card-body px-5 py-4">
                <h2 class="mb-4 fw-bold text-center text-primary" style="letter-spacing:1px;">Edit Person</h2>
                <form asp-action="Edit" method="post" autocomplete="off">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control form-control-lg rounded-pill" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control form-control-lg rounded-pill" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control form-control-lg rounded-pill" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="JobTitle" class="form-label">Job Title</label>
                            <input asp-for="JobTitle" class="form-control form-control-lg rounded-pill" />
                            <span asp-validation-for="JobTitle" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Salary" class="form-label"></label>
                            <input asp-for="Salary" class="form-control form-control-lg rounded-pill" />
                            <span asp-validation-for="Salary" class="text-danger small"></span>
                        </div>
                    </div>
                    @if (User.IsInRole(HRAdminRoleName))
                    {
                        <div class="mb-4">
                            <label asp-for="DepartmentId" class="form-label">Department</label>
                            <select asp-for="DepartmentId" class="form-select form-select-lg rounded-pill"
                                    asp-items="@(new SelectList(Model.Departments, "Id", "Name", Model.DepartmentId))">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>
                    }

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow">Save Changes</button>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="All" class="btn btn-link text-decoration-none">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
